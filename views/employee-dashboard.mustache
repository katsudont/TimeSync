<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard - TimeSync</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #343a40;
            color: #ffffff;
        }
        .container {
            margin-top: 30px;
        }
        .dashboard {
            margin-top: 30px;
        }
        .dashboard-stats {
            margin-top: 20px;
        }
        .clock-buttons .btn {
            border-radius: 20px;
            padding: 10px 20px;
        }
        .table th, .table td {
            text-align: center;
        }
        footer {
            text-align: center;
            margin-top: 30px;
            color: #dddddd;
        }
        .logout-btn {
            background-color: #dc3545;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            padding: 10px 15px;
            position: absolute;
            top: 20px;
            right: 20px;
        }
        .logout-btn:hover {
            background-color: #f44336;
            color: white;
        }
        /* Styling for the modal text */
        .modal-header, .modal-body, .modal-footer {
            color: #343a40; /* Dark text for better visibility */
        }
        .modal-content {
            background-color: #f8f9fa; /* Light background for contrast */
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1 class="text-center text-white">Welcome to TimeSync, {{username}}</h1>
        </header>

        <!-- Logout Button -->
        <button class="logout-btn" data-toggle="modal" data-target="#logoutModal">Logout</button>

        <!-- Employee Dashboard Content -->
        <section class="dashboard">
            <h2 class="text-center text-white">Your Attendance</h2>

            <!-- Clock In/Out Buttons -->
            <div class="clock-buttons text-center mb-4">
                <form action="/employee-dashboard/clockIn" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-success">Clock In</button>
                </form>
                <form action="/employee-dashboard/clockOut" method="POST" class="d-inline ml-3">
                    <button type="submit" class="btn btn-danger">Clock Out</button>
                </form>
            </div>

            <!-- Attendance Table -->
            <div class="attendance-info">
                <h3 class="text-center text-white">Attendance Records</h3>
                <table class="table table-bordered table-hover table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Shift ID</th>
                            <th scope="col">In Time</th>
                            <th scope="col">In Status</th>
                            <th scope="col">Out Time</th>
                            <th scope="col">Out Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#attendanceRecords}}
                        <tr>
                            <td>{{shiftID}}</td>
                            <td>{{InTime}}</td>
                            <td>{{InStatus}}</td>
                            <td>{{OutTime}}</td>
                            <td>{{OutStatus}}</td>
                        </tr>
                        {{/attendanceRecords}}
                    </tbody>
                </table>
            </div>
        </section>
    </div>

    <footer>
        <p>&copy; 2024 TimeSync</p>
    </footer>

    <!-- Bootstrap and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Are you sure you want to log out?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    You will be logged out from the system.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="logout()">Logout</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Logout Script -->
    <script>
        function logout() {
            // Redirect to the logout route (adjust the URL according to your backend)
            window.location.href = '/login';
        }
    </script>
</body>
</html>
